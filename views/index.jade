extends layout

//Left div will have love tweets
mixin left(id,title,footer)
  div(class="panel panel-default",id="#{id}-metric" )
    if title
        div.panel-heading: h3.panel-title(id="#{title}")="twitted by"
    div(class="panel-body-metric")
        ul(class="left")
        //h1(id="#{id}")="TBD"
    if footer
        div.panel-footer(id="#{tittle}")= footer
        //input#ping(type="button", value="Send Ping")
//Right div will have hate tweets
mixin right(id,title,footer)
  div(class="panel panel-default",id="#{id}-metric" )
    if title
        div.panel-heading: h3.panel-title(id="#{title}")="twitted by"
    div(class="panel-body-metric")
        ul(class="right")
        //h1(id="#{id}")="TBD"
    if footer
        div.panel-footer= footer
        //input#ping(type="button", value="Send Ping")

mixin top(id,title)
  div(class="panel panel-default",id="#{id}-metric" )
    if title
        div.panel-heading: h3.panel-title(id="#{id}")="Twitter Counter"
    div(class="panel-body-metric")
        h1(id="#{title}")="TBD"
    if footer
        div.panel-footer="Love/Hate Counter"

block styles

block scripts
    //enable socket.io communication on the client side
    script(src='/socket.io/socket.io.js')
    script(src='javascripts/client.socket.io.js')

block content
  //input#ping(type="button", value="Send Ping")
  div(class="container")
    div.page-header: h1 Twitter Sentiment Analysis
    div(class="row")
     div(class="col-lg-12")
       +top("total", "per")
    div(class="row")
      div(class="col-md-6")
        +left("hl-tweet","love-tweet","Tweet Feed")
      div(class="col-md-6")
        +right("hl-tweet","hate-tweet","Tweet Feed")

